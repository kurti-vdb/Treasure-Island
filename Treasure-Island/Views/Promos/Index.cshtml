@model IEnumerable<vs_project.Models.Promo>


@{
    ViewBag.Title = "Brand - win een fabelachtig weekend in de Disneyland Parijs";
}


    <form action="Promos/Validate" method="POST">
        <div id="main">
            <div class="inner">
                <div class="blad1"></div>
                <div class="blad3"></div>
                <a href="#" id="logo">Brand - mijn slogan</a>
                <div class="content">
                    <h1 class="title-1">Win een fabelachtig weekend in Disneyland Parijs</h1>
                    <p class="intro">Piraten bestaan. Echt. En jij kan het zelf beleven, samen met je hele gezin! Wij geven <strong>10 fabelachtige weekends</strong> in Frankrijks mooiste attractiepark weg. Je overnacht er in een prachtig hotel in Disneyland Parijs. En overdag? Dan komen je dromen pas écht tot leven. Dus trek die stoute schoenen aan en waag je kans!</p>
                    <div class="box">
                        <div class="box__inner">
                            <h3 class="title-2">Vul je unieke wedstrijdcode in</h3>
                            <p>(Vul voor deze demo het woord promo in)</p>
                            <div class="form-inline">
                                <div class="form-group form-group-lg">
                                </div> 
                                    <label for="inputCode" class="sr-only">Vul je code in</label>
                                    <input type="text" class="form-control" id="inputCode" name="Code" placeholder="Vul je code in">
                                    <button type="submit" class="btn btn-red btn-lg">Ik doe mee</button>
                            </div>
                        </div>
                    </div>
                    <h3 class="title-3">Wat kun je winnen?</h3>
                    <div class="content-small">
                        <div class="row row--borderbetween">
                            <div class="col-sm-6">
                                <h5 class="title-4">5 weekends Disneyland Parijs</h5>
                                <p class="small">(max. 4 personen, verblijf in  Disney's Hotel New York, 2 nachten, 3 dagen inclusief ontbijt &amp; onbeperkt toegang park)</p>
                            </div>
                            <div class="col-sm-6">
                                <h5 class="title-5">5 weekends Disneyland Parijs</h5>
                                <p class="small">(max. 6 personen, verblijf in Disney's Sequoia Lodge, 3 nachten, 4 dagen inclusief bezorgd ontbijt &amp; onbeperkt toegang park)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="paddestoel"></div>
            <div class="schoen"></div>
        </div>
        <footer>
            &copy; 2016 <a href="#">Brand</a>  |  <a href="#">Disneyland Parijs</a>  |  <a href="#">Wedstrijdreglement</a>  |  <a href="#">Contact</a>
        </footer>
    </form>

